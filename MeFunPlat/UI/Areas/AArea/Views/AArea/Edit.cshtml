
@{
    Layout = null;
}
@using WeFunModel;
@model _Areas
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑用户</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/Content/lib/layui-v2.5.5/css/layui.css" media="all">
    <link rel="stylesheet" href="/Content/css/public.css" media="all">
    <script src="/Content/lib/layui-v2.5.5/layui.js" charset="utf-8"></script>
    <script type="text/javascript">
        layui.use(['form'], function () {
            var $ = layui.jquery,
                form = layui.form,
                layer = layui.layer;

            //自定义验证规则
            form.verify({
                title: function (value) {
                    if (value.length < 5) {
                        return '用户名至少得5个字符啊';
                    }
                }
                , pass: [
                    /^[\S]{6,12}$/
                    , '密码必须6到12位，且不能出现空格'
                ]
                , content: function (value) {
                    layedit.sync(editIndex);
                }
            });

            $("#btnUpt").click(function () {
                var o = new Object();
                o.ARID = $("#ARID").val();
                o.ARName = $("#ARName").val();
                o.ARParent = $("#ARParent").val();
                o.ARIndex = $("#ARIndex").val();
                o.ARState = $("input[name='state']:checked").val();;
                $.post("/AArea/AArea/EditArea", o, function (d) {
                    if (d == "Success") {
                        layer.msg("添加成功！");
                    }
                    else {
                        layer.msg("添加失败！");
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">
            <form class="layui-form" action="" lay-filter="example">
                
                
                <input type="hidden" id="ARID" name="ARID" value="@Model.ARID" />
                <div class="layui-form-item">
                    <label class="layui-form-label">ARName</label>
                    <div class="layui-input-block">
                        <input type="text" id="ARName" name="ARName" lay-verify="title" autocomplete="off" placeholder="游戏名称" class="layui-input" value="@Model.ARName">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">所属区域</label>
                    <div class="layui-input-block">
                        <input type="text" id="ARParent" name="ARParent" lay-verify="title" autocomplete="off" placeholder="所属区域" class="layui-input" value="@Model.ARParent">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">哈哈哈</label>
                    <div class="layui-input-block">
                        <input type="text" id="ARIndex" name="ARIndex" lay-verify="title" autocomplete="off" placeholder="哈哈哈" class="layui-input" value="@Model.ARIndex">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-block">
                        @{ if (Model.ARState == 0)
                            {
                                <input type="radio" name="state" value="0" title="启用" checked="checked">
                                <input type="radio" name="state" value="1" title="禁用">
                            }
                            else
                            {
                                <input type="radio" name="state" value="0" title="启用" checked="">
                                <input type="radio" name="state" value="1" title="禁用" checked="checked">
                            }
                        }

                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" id="btnUpt" value="立即提交" >立即提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
