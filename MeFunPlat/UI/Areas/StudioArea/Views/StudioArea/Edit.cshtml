
@{
    Layout = null;
}
@using WeFunModel;
@model Studios
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑用户</title>06*-
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/Content/lib/layui-v2.5.5/css/layui.css" media="all">
    <link rel="stylesheet" href="/Content/css/public.css" media="all">
    <script src="/Content/lib/layui-v2.5.5/layui.js" charset="utf-8"></script>
    <script type="text/javascript">
        layui.use(['form'], function () {
            var $ = layui.jquery,
                form = layui.form,
                layer = layui.layer;

            //自定义验证规则
            form.verify({
                title: function (value) {
                    if (value.length < 5) {
                        return '用户名至少得5个字符啊';
                    }
                }
                , pass: [
                    /^[\S]{6,12}$/
                    , '密码必须6到12位，且不能出现空格'
                ]
                , content: function (value) {
                    layedit.sync(editIndex);
                }
            });

            $("#btnUpt").click(function () {
                var o = new Object();
                o.RoomID = $("#RoomID").val();
                o.RoomName = $("#RoomName").val();
                o.Remake = $("#Remake").val();
                o.ARState = $("input[name='state']:checked").val();;
                $.post("/StudioArea/StudioArea/EditStudios", o, function (d) {
                    if (d == "Success") {
                        layer.msg("添加成功！");
                    }
                    else {
                        layer.msg("添加失败！");
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">
            <form class="layui-form" action="" lay-filter="example">
                <input type="hidden" id="RoomID" name="RoomID" value="@Model.RoomID" />
                <div class="layui-form-item">
                    <label class="layui-form-label">直播间名称</label>
                    <div class="layui-input-block">
                        <input type="text" id="RoomName" name="RoomName" lay-verify="title" autocomplete="off" placeholder="直播间名称" class="layui-input" value="@Model.RoomName">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-block">
                        <input type="text" id="Remake" name="Remake" lay-verify="title" autocomplete="off" placeholder="备注" class="layui-input" value="@Model.Remake">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-block">
                        @{ if (Model.State == 0)
                            {
                                <input type="radio" name="state" value="0" title="启用" checked="checked">
                                <input type="radio" name="state" value="1" title="禁用">
                            }
                            else
                            {
                                <input type="radio" name="state" value="0" title="启用" checked="">
                                <input type="radio" name="state" value="1" title="禁用" checked="checked">
                            }
                        }

                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" id="btnUpt" value="立即提交">立即提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
